@model Home_Office_Solutions.Models.Shop

@{
    ViewData["Title"] = "Edit";
}

<h2>Store Details</h2>

    <h5>Edit Store Details</h5>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ShopID" />
                <div class="form-group">
                    <label asp-for="ShopAddress" class="control-label"></label>
                    <input asp-for="ShopAddress" class="form-control" />
                    <span asp-validation-for="ShopAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShopName" class="control-label"></label>
                    <input asp-for="ShopName" class="form-control" />
                    <span asp-validation-for="ShopName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
